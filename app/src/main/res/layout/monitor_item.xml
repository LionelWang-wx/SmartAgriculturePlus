<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_margin="25dp"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:id="@+id/rl_deviceBackground"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:background="@mipmap/iv_device_background"
        >
        <ImageView
            android:id="@+id/iv_deviceIsFinishIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/unfinished"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            />
        <ImageView
            android:id="@+id/iv_deviceIcon"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@mipmap/img_carousel1"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_deviceIsFinishIcon"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温湿度传感器"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/iv_deviceIcon"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_deviceIsFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缺少设备"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:textColor="#03A9F4"
            android:layout_below="@id/tv_deviceName"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>